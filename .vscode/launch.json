    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File as Module (via command-variable)",
            "type": "debugpy",
            "request": "launch",
            // Build module name from the file's relative dir + basename 
            // by replacing path separators with dots
            "module": "${command:extension.commandvariable.file.relativeFileDotsNoExtension}"
        },
        {
            "name": "Python: game_session_sync",
            "type": "debugpy",
            "request": "launch",
            "module": "game_session_sync",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            // supports overriding .env file for local debugging
            "env": {
                "CONFIG_YAML": "config.dev.yaml"
            },
        }
    ]
}